{
  "version": "2.0.0",
  "tasks": [
    {
      // VS Code displays this name and launch.json calls it with "preLaunchTask"
      "label": "build-raylib",
      "type": "shell",
      "command": "g++",

      // -------- compiler & linker flags ----------
      "args": [
        /* create debug symbols for GDB */
        "-g",

        /* compile every .cpp file inside game_index */
        "${workspaceFolder}/game_index/*.cpp",

        /* raylib headers and libraries */
        "-I", "C:/raylib/raylib-5.5_win64_mingw-w64/raylib-5.5_win64_mingw-w64/include",
        "-L", "C:/raylib/raylib-5.5_win64_mingw-w64/raylib-5.5_win64_mingw-w64/lib",

        /* link libraries â€” order matters */
        "-lraylib", "-lopengl32", "-lgdi32", "-lwinmm",

        /* output executable inside game_index */
        "-o", "${workspaceFolder}/game_index/voidmarch.exe"
      ],

      /* makes this your default build when you press Ctrl+Shift+B */
      "group": { "kind": "build", "isDefault": true },

      /* lets VS Code parse g++ error messages */
      "problemMatcher": ["$gcc"]
    }
  ]
}

