{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-raylib",
      "type": "shell",
      "command": "g++",
      "args": [
        "${workspaceFolder}/game_index/*.cpp",
        "-IC:/raylib/raylib-5.5_win64_mingw-w64/raylib-5.5_win64_mingw-w64/include",
        "-LC:/raylib/raylib-5.5_win64_mingw-w64/raylib-5.5_win64_mingw-w64/lib",
        "-lraylib", "-lopengl32", "-lgdi32", "-lwinmm",
        "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
